@page "/TipsPage"
@inject NavigationManager Navigation

<PageTitle>Tips</PageTitle>
<style>
        .tips-page {
        padding: 20px;
    }

    /* Header Styling */
    .header {
        display: grid;
        grid-template-columns: auto 1fr auto;
        align-items: center;
        padding-top: 20px;
    }

    .header .icon {
        width: 24px;
        height: 24px;
        cursor: pointer;
    }

    .header h1 {
        font-size: 18px;
        font-weight: bold;
        text-align: center;
    }

    /* Section Styling */
    .section {
        padding: 20px 0;
    }

    .section-title {
        font-size: 16px;
        color: black;
    }

    .amount {
        font-size: 40px;
        font-weight: bold;
        color: black;
    }

    .last-transactions .btn-view-all {
        background-color: transparent;
        color: #FF3D58;
        font-weight: bold;
        border: none;
        cursor: pointer;
    }

    /* Transaction List */
    .transactions-list {
        margin-top: 10px;
    }

    .transaction-item {
        display: grid;
        grid-template-columns: 40px 1fr auto;
        padding: 10px 0;
        align-items: center;
        border-bottom: 1px solid #ddd;
    }

    .avatar img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
    }

    .details {
        padding-left: 10px;
    }

    .details .name {
        font-size: 14px;
        font-weight: bold;
        color: black;
    }

    .details .date {
        font-size: 12px;
        color: gray;
    }

    .amount {
        font-size: 14px;
        font-weight: bold;
        color: black;
        text-align: end;
    }

    /* Button Styling */
    .btn-all-transactions {
        background-color: #FF3D58;
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        width: 100%;
        height: 50px;
        cursor: pointer;
        margin-top: 20px;
    }

    .btn-all-transactions:hover {
        background-color: #e02b46;
    }
</style>
<div class="tips-page">
    <!-- Header -->
    <div class="header">
       @*  <img src="back_icon.png" alt="Back" class="icon" @onclick="OnBackClicked" />
        *@ <h1>Tips</h1>
        @* <img src="more_icon.png" alt="More" class="icon" @onclick="OnMoreClicked" /> *@
    </div>

    <!-- Total Tips Section -->
    <div class="section total-tips">
        <label class="section-title">Total Tips</label>
        <label class="amount">$124.57</label>
    </div>

    <!-- Last Transactions Section -->
    <div class="section last-transactions">
        <label class="section-title">Last Transactions</label>
        <button class="btn-view-all" @onclick="ViewAllTransactions">View All</button>
    </div>

    <!-- Transactions List -->
    <div class="transactions-list">
        @foreach (var transaction in transactions)
        {
            <div class="transaction-item">
                <!-- Avatar -->
                <div class="avatar">
                    <img src="images/userimage.png" alt="User" />
                </div>
                <!-- Transaction Details -->
                <div class="details">
                    <span class="name">@transaction.Name</span>
                    <span class="date">@transaction.DateTime</span>
                </div>
                <!-- Amount -->
                <div class="amount">
                    <span>@transaction.Amount</span>
                </div>
            </div>
        }
    </div>

    <!-- All Transactions Button -->
    <button class="btn-all-transactions" @onclick="OnAllTransactionsClicked">All Transactions</button>

    <BottomTabBar />
</div>

