@page "/newtip"
@inject NavigationManager Navigation

@inherits LayoutComponentBase
<NavMenu />
<PageTitle>New Tip</PageTitle>

<style>
    .new-tip-page {
        padding: 20px;
        background-color: white;
    }

    .scrollable-content {
        padding-bottom: 100px;
    }

    /* Header Styles */
    .header {
        display: grid;
        grid-template-columns: auto 1fr auto;
        align-items: center;
        padding: 20px 0;
    }

    .icon {
        width: 24px;
        height: 24px;
        cursor: pointer;
    }

    h1 {
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        font-family: 'Montserrat', sans-serif;
    }

    .rocket {
        color: black;
    }

    .tips {
        color: #2196F3;
    }

    .user-icon {
        width: 32px;
        height: 32px;
        border-radius: 50%;
    }

    /* Total Tips Section */
    .total-tips-section {
        margin-top: 20px;
    }

    .info-box {
        background-color: transparent;
        padding: 20px;
        border-radius: 15px;
        border: 1px solid #f3f3f3;
        margin-bottom: 20px;
    }

        .info-box p {
            font-size: 16px;
            font-weight: bold;
            text-align: center;
        }

    .amount-input {
        display: flex;
        justify-content: space-around;
        align-items: center;
        margin-top: 20px;
    }

        .amount-input span {
            font-size: 16px;
        }

    .icon-small {
        width: 14px;
        height: 14px;
    }

    input[type="number"] {
        width: 70%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #f3f3f3;
        background-color: transparent;
    }

    .error-message {
        color: red;
        font-size: 12px;
        margin-top: 10px;
    }

    /* QR Code Section */
    .qr-section {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

        .qr-section img {
            width: 200px;
            height: 200px;
        }

    /* Bottom Tab Bar */
    .bottom-tab-bar {
        display: flex;
        justify-content: space-around;
        background-color: #2196F3;
        padding: 10px;
        position: fixed;
        bottom: 0;
        width: 100%;
    }

        .bottom-tab-bar .tab-icon {
            width: 24px;
            height: 24px;
            cursor: pointer;
        }

        .bottom-tab-bar .tab-label {
            color: white;
            font-size: 12px;
        }

    .save-button {
        background-color: #F83758;
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        height: 50px;
        width: 100%;
        cursor: pointer;
    }

        .save-button:disabled {
            background-color: #d3d3d3;
            cursor: not-allowed;
        }

        .save-button:hover {
            background-color: #d6283b; /* Darker shade for hover effect */
        }
</style>

<div class="new-tip-page">
    <!-- Scrollable Content -->
    <div class="scrollable-content">
        <!-- Total Tips Section -->
        <div class="total-tips-section">
            <div class="info-box">
                <p>
                    Show this screen to the customer and have them scan your bar code with their mobile phone to leave a tip.
                    Make it easier for your customer by entering the total bill amount.
                </p>
                <div class="amount-input">
                    <div>
                        <span>Total Tips</span>
                        <img src="images/dollar_icon.png" alt="Dollar Icon" class="icon-small" />
                    </div>
                    <input type="number" placeholder="Amount" @bind="tipAmount" @bind:event="oninput" />
                </div>
                <!-- Error Message -->
                @if (!isValidAmount)
                {
                    <p class="error-message">Please enter a valid amount greater than 0.</p>
                }
            </div>

            <!-- QR Code Section -->
            <div class="qr-section">
                <img src="images/sample_qr.jpg" alt="QR Code" />
            </div>
        </div>
    </div>
</div>

<BottomTabBar />

@code {
    private decimal tipAmount { get; set; }

    // Validate if tipAmount is greater than 0
    private bool isValidAmount => tipAmount > 0;

    private void OnMenuClicked()
    {
        // Handle Menu Button Click
        Navigation.NavigateTo("/menu");
    }

    // Submit logic, only proceed if the amount is valid
    private void HandleSave()
    {
        if (isValidAmount)
        {
            // Proceed with saving logic or navigation
            Navigation.NavigateTo("/tipSummaryPage"); // Example: Navigate to the next page after saving the tip
        }
    }
}
